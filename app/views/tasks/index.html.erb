<body>

  <div class="container">
    <div class="page-header">
      <div class="pull-right">
        <a class="btn btn-info"<%= link_to 'New Task', new_task_path %>
      </div>
      <h1>Listing Tasks</h1></div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
      <th class="text-left">Due On</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.description, task %></td>
        <td><%= task.date %></td>
        <td class="text-right"><%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
            <a class="btn btn-danger"<%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>
</body>

<body>
  <p id="notice"><%= notice %></p>

  <div class="container">
    <div class="page-header">
      <div class="pull-right">
        <button class="btn btn-info"><%= link_to 'New Task', new_task_path %></button>
      </div>
      <h1>Listing Tasks</h1></div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.description, task %></td>
        <td>
          <div class="text-right">
            <button class="btn btn-info"><%= link_to 'Edit', edit_task_path(task) %></button>
            <button class="btn btn-danger"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>
</body>

<%= form_for([@project, @task], html: {class: "form-horizontal"}) do |f| %>

<%= render partial: 'shared/error', locals: {object: @task} %>

<div class="form-group">
  <div class = "field">
    <div class = "control-label col-md-2">
      <%= f.label :description %>
    </div>
  </div>
  <div class= "col-md-4">
    <%= f.text_field :description, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class = "field">
    <div class = "control-label col-md-2">
      <%= f.label :due_date %>
    </div>
  </div>
  <div class= "col-md-4">
    <%= f.date_select :date, class: "form-control" %>
  </div>
</div>

<% if @task.description != nil %>
<div class="form-group">
  <div class = "field">
    <div class = "control-label col-md-2">
      <%= f.label :completed %>
    </div>
    <div class= "col-md-4">
      <% if @task.complete == true %>
      <%= f.check_box :complete, { :checked => 'checked'} %>
      <% else %>
      <%= f.check_box :complete %>
      <% end %>
    </div>
  </div>
</div>
<% end %>

<div class="form-group">
  <div class="col-md-4 col-md-offset-2">
    <div class="action">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Cancel', project_tasks_path(@project), class: "btn btn-default" %>
    </div>
  </div>
</div>

<% end %>

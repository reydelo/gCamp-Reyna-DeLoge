<body>

  <div class="container">
    <div class="page-header">
      <div class="pull-right">
        <a class="btn btn-info"<%= link_to 'New User', new_user_path %>
      </div>
      <h1>Users</h1></div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, user_path(user) %></td>
        <% if admin || current_user.projects.any? { |project| project.users.include?(user) } %>
        <td><%= mail_to user.email %></td>
        <% else %>
        <td></td>
        <% end %>
        <% if admin or current_user.id == user.id %>
        <td class="text-right"><%= link_to 'Edit', edit_user_path(user) %></td>
        <% else %>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>
</body>

<body>

  <div class="container">
    <div class="page-header">
      <div class="pull-right">
        <a class="btn btn-info"<%= link_to 'New User', new_user_path %>
      </div>
      <h1>Users</h1></div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= u.first_name %> <%= u.last_name %></td>
        <td><%= mail_to u.email %></td>
        <td><%= link_to 'edit', edit_user_path(u) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>
</body>
